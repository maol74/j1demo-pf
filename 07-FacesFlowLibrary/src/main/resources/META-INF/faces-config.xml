<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <flow-definition id="avatarChooser">
        <!-- Parameter from credentials flow -->
        <inbound-parameter>
            <name>surname</name>
            <value>#{avatarBean.surname}</value>
        </inbound-parameter>
        <inbound-parameter>
            <name>givenname</name>
            <value>#{avatarBean.givenname}</value>
        </inbound-parameter>

        <!-- Start page (named as the flow), also could be used <start-node> tag -->
        <view id="avatarChooser">
            <vdl-document>/META-INF/flows/avatarChooser/start.xhtml</vdl-document>
        </view>

        <flow-return id="index">
            <from-outcome>/index</from-outcome>
        </flow-return>

        <!-- Go back to the previous flow and save the value of the avatar -->
        <flow-call id="save">
            <flow-reference>
                <flow-id>credentialsFlow</flow-id>
            </flow-reference>
            <outbound-parameter>
                <name>avatar</name>
                <value>#{avatarBean.avatar}</value>
            </outbound-parameter>
        </flow-call>
    </flow-definition>
</faces-config>
